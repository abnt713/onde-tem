{{yield}}

<div class="marker-details">
	<div class="content">
		<header class="marker-details-header">
			<div class="text-center marker-details-title">
				Novo marcador
				<a class="marker-details-close" href="#">X</a>	
			</div>
		</header>
			<div class="form-group">
				<label for="nome_marcador">Nome</label>
				{{ input id="nome_marcador" name="marcador" placeholder="Nome" class="form-control" value=marcador.label}}
			</div>
			<button {{action 'novo_marcador'}}>Enviar</button>
	</div>
</div>


<script type="text/javascript">
	$('.marker-details-close').on('click', function(){
		$('.marker-details-wrapper').hide();
	});
</script>
