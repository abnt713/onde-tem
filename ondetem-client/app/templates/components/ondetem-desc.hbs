{{yield}}

<div class="marker-details">
	<div class="content">
		<header class="marker-details-header">
			<div class="text-center marker-details-title">
				{{displayMarker.label}}
				<a class="marker-desc-close" href="#">X</a>
			</div>
		</header>
		<div class="marker-details-content">
			<p>
				<strong>Endereço:</strong> {{displayMarker.address}}
			</p>
		</div>
		<hr>
		<div class="marker-rating">
			<p class="text-center">
				<strong>Pontuação</strong><br>
				Votos: {{total}}
			</p>
			<div class="progress">
			 <div class="progress-bar progress-bar-success" role="progressbar" style="width:{{positiveProgress}}%">
			   {{positive}}
			 </div>
			 <div class="progress-bar progress-bar-danger" role="progressbar" style="width:{{negativeProgress}}%">
			   {{negative}}
			 </div>
			</div>
			<div class="rating-wrapper">
				<div class="rating text-center">
					<a href="#" {{action 'rating_up'}} class="text-success">
						<i class="fa fa-thumbs-o-up rating-icon"></i><br>
						Aprovado
					</a>
				</div>
				<div class="rating text-center">
					<a href="#" {{action 'rating_down'}} class="text-danger">
						<i class="fa fa-thumbs-o-down rating-icon"></i><br>
						Reprovado
					</a>
				</div>
			</div>
		</div>
	</div>
</div>


<script type="text/javascript">
$('.marker-desc-close').on('click', function(){
	$('.marker-desc-wrapper').hide();
});
</script>
